<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.1"
                tools:ignore="InefficientWeight,ObsoleteLayoutParam,ScrollViewSize,UselessParent">

                <RelativeLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imagerelative"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/pr_image"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/bg_people"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/login_border"
                        android:background="@drawable/border_black"
                        tools:ignore="NotSibling"
                        android:layout_below="@+id/imagerelative"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            tools:ignore="UselessParent"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="@color/tabSelectedIconColor"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_weight="2"
                                    android:padding="4dp"
                                    >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Product Name :-"
                                        android:textSize="@dimen/text_size_large"
                                        android:textColor="@color/primary_text"
                                        android:layout_weight=".2"
                                        tools:ignore="NestedWeights"
                                        android:id="@+id/textView2" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/text_size_large"
                                        android:layout_weight="1.8"
                                        />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_weight="2"
                                    android:layout_marginTop="2dp"
                                    android:padding="4dp"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Product Discription :-"
                                        android:textColor="@color/primary_text"
                                        android:layout_weight=".2"
                                        android:textSize="@dimen/text_size_large"
                                        tools:ignore="NestedWeights" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1.8"
                                        />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_weight="2"
                                    android:layout_marginTop="2dp"
                                    android:padding="4dp"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Price :-"
                                        android:textColor="@color/primary_text"
                                        android:layout_weight=".2"
                                        android:textSize="@dimen/text_size_large"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1.8"
                                        />

                                </LinearLayout>



                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:orientation="horizontal"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:layout_weight="2"
                                    android:layout_marginTop="2dp"
                                    android:padding="4dp"
                                    >
                                    <TextView
                                        android:layout_width="150dp"
                                        android:layout_height="40dp"
                                        android:text="Overall Ratings :-"
                                        android:textColor="@color/primary_text"
                                        android:gravity="center_vertical"
                                        android:textSize="@dimen/text_size_large"
                                        tools:ignore="NestedWeights" />
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.6"
                                        android:layout_gravity="center_vertical"
                                        >

                                        <RatingBar
                                            android:layout_width="wrap_content"
                                            android:layout_height="40dp"
                                            android:stepSize="0.1"
                                            android:id="@+id/ratingOverall"
                                            android:focusable="false"
                                            android:scaleX=".5"
                                            android:scaleY=".5"
                                            android:numStars="5"
                                            android:transformPivotX="0dp"
                                            android:transformPivotY="10dp"

                                            />

                                    </LinearLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginBottom="5dp"
                                    android:orientation="horizontal"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:layout_weight="2"
                                    android:layout_marginTop="2dp"
                                    android:padding="4dp"
                                    >
                                    <TextView
                                        android:layout_width="150dp"
                                        android:layout_height="40dp"
                                        android:textSize="@dimen/text_size_large"
                                        android:text="Feature Ratings :-"
                                        android:textColor="@color/primary_text"
                                        android:gravity="center_vertical"
                                        tools:ignore="NestedWeights" />
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.6"
                                        android:layout_gravity="center_vertical"
                                        >

                                        <RatingBar
                                            android:layout_width="wrap_content"
                                            android:layout_height="40dp"
                                            android:stepSize="0.1"
                                            android:id="@+id/featurerating"
                                            android:focusable="false"
                                            android:scaleX=".5"
                                            android:scaleY=".5"
                                            android:numStars="5"
                                            android:transformPivotX="0dp"
                                            android:transformPivotY="10dp"

                                            />

                                    </LinearLayout>

                                </LinearLayout>



                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:orientation="horizontal">
                                    <Button
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:id="@+id/review"
                                        android:text="Review"
                                        android:textAllCaps="false"
                                        android:background="@color/def"
                                        android:layout_weight="1"
                                        tools:ignore="NestedWeights" />

                                    <Button
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:id="@+id/Buy"
                                        android:background="@color/def"
                                        android:text="Buy"
                                        android:textAllCaps="false"
                                        android:layout_weight="1"
                                        />

                                    <Button
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:id="@+id/Voucher"
                                        android:textAllCaps="false"
                                        android:background="@color/def"
                                        android:text="Voucher"
                                        android:layout_weight="1"
                                        />
                                </LinearLayout>


                            </LinearLayout>




                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:padding="4dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/login_text_size"
                        android:text="Comments &amp; Reviews"
                        android:textColor="@color/primary_text" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    >

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="vertical" />

                </RelativeLayout>
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>